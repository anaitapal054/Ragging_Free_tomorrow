<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel="icon" href="images/stop_ragging (1).png">
    <!-- Site Properties -->
    <title>complaint</title>
    <link rel="stylesheet" type="text/css" href="/semantic/dist/semantic.css">

    <style type="text/css">
        label{
            font-weight: bolder;
        }

        .hidden.menu {
            display: none;
        }

        .masthead.segment {
            min-height: 700px;
            padding: 1em 0em;
        }
        .masthead .logo.item img {
            margin-right: 1em;
        }
        .masthead .ui.menu .ui.button {
            margin-left: 0.5em;
        }
        .masthead h1.ui.header {
            margin-top: 3em;
            margin-bottom: 0em;
            font-size: 4em;
            font-weight: normal;
        }
        .masthead h2 {
            font-size: 1.7em;
            font-weight: normal;
        }

        .ui.vertical.str {
            padding: 8em 0em;
        }
        .ui.vertical.str h4 {
            font-size: 2em;
        }
        .ui.vertical.str .button + h4,
        .ui.vertical.str p + h4 {
            margin-top: 3em;
        }
        .ui.vertical.str .floated.image {
            clear: both;
        }
        .ui.vertical.str p {
            font-size: 1.33em;
        }
        .ui.vertical.str .horizontal.divider {
            margin: 3em 0em;
        }

        .quote.str.segment {
            padding: 0em;
        }
        .quote.str.segment .grid .column {
            padding-top: 5em;
            padding-bottom: 5em;
        }

        .footer.segment {
            padding: 5em 0em;
        }

        .secondary.ptg.menu .toc.item {
            display: none;
        }

        @media only screen and (max-width: 700px) {
            .ui.fixed.menu {
                display: none !important;
            }
            .secondary.ptg.menu .item,
            .secondary.ptg.menu .menu {
                display: none;
            }
            .secondary.ptg.menu .toc.item {
                display: block;
            }
            .masthead.segment {
                min-height: 350px;
            }
            .masthead h1.ui.header {
                font-size: 2em;
                margin-top: 1.5em;
            }
            .masthead h2 {
                margin-top: 0.5em;
                font-size: 1.5em;
            }
        }


    </style>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="/semantic/dist/semantic.js"></script>
    <script src="../sweetalert2.all.js"></script>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#image_preview')
                        .attr('src', e.target.result)
                        .width(192)
                        .height(192);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        function onl()
        {
            $('#forma').form();
        }
        function form_clear() {
            $('#forma').form('clear');
        }

        function change_password(){
            swal({
                title: 'Change password',
                html: `<div class="ui form">
    <div class="fluid field">
    <label>Current Password</label>
      <input id="current_password" type="password" placeholder="Current Password">
    </div>
    <div class="fluid field">
    <label>New Password</label>
      <input id="new_password" type="password" placeholder="New Password">
    </div>
</div>`,
                showCancelButton: true,
                confirmButtonColor: "#d33",
                confirmButtonText: 'Submit',
                showLoaderOnConfirm: true,
                preConfirm: () => {
                    let current_password= document.getElementById('current_password').value;
                    let new_password = document.getElementById('new_password').value;
                    return new Promise((resolve) => {
                        $.post(
                            "/dashboard/change_password",
                            { old_password:current_password,
                                new_password:new_password
                            },
                            function(data) {
                                if(!data.error)
                                {
                                    swal({
                                        type: "success",
                                        title: "password changed",
                                        confirmButtonColor: '#d33'
                                    });
                                }
                                else
                                {
                                    swal({
                                        type: "error",
                                        title: data.error_message,
                                        confirmButtonColor: '#d33'
                                    });
                                }
                            }
                        );
                    });
                },
                allowOutsideClick: () => !swal.isLoading()
            });
        }

        $(document)
            .ready(function() {
                onl();
                var data = <%-JSON.stringify(data)%>;
                var designation=data.designation;
                var email=data.email;
                var login_id=data.login_id;
                var id = data.id;
                document.getElementById("id").value=id;
                var mobile=data.mobile;
                var name = data.name;
                var profile_pic = data.profile_pic;
                if(designation!==null)
                    document.getElementById("designation").value=designation;
                if(email!==null)
                    document.getElementById("email").value=email;
                if(name!==null)
                    document.getElementById("name").value=name;
                if(mobile!==null)
                    document.getElementById("mobile").value=mobile;
                if(profile_pic!==null)
                {
                    console.log(profile_pic);
                    $('#image_preview')
                        .attr('src', `../images/profile_pics/`+profile_pic)
                        .width(192)
                        .height(192);
                }
                <%if(profile_type==1){%>
                    document.getElementById("type").value=`ADMIN`;
                <%}else if(profile_type==2){%>
                    document.getElementById("type").value=`VOLUNTEER`
                <%}%>
                // fix menu when passed
                $('.masthead')
                    .visibility({
                        once: false,
                        onBottomPassed: function () {
                            $('.fixed.menu').transition('fade in');
                        },
                        onBottomPassedReverse: function () {
                            $('.fixed.menu').transition('fade out');
                        }
                    })
                ;

                // create sidebar and attach to menu open
                $('.ui.sidebar')
                    .sidebar('attach events', '.toc.item')
                ;
            });
    </script>
</head>
<body>

<!-- Following Menu -->
<div class="ui large top fixed hidden menu">
    <div class="ui container">
        <div class="item">
            <div class="image">
                <img src="../images/stop_ragging (2).png">
            </div>
        </div>
        <a class="item" href="/dashboard">Complaints</a>
        <%if(profile_type==1){%>
        <a class="item" href="/dashboard/undertakings">Undertakings</a>
        <a class="item" href="/dashboard/volunteers">Volunteers</a>
        <%}%>
        <a class="active item">Profile</a>
        <a class="item" href="/dashboard/logout">Logout</a>
        <div class="right menu">
            <div class="item">
                <a class="ui red button login">Log In / Sign Up</a>
            </div>
        </div>
    </div>
</div>

<!-- Sidebar Menu -->
<div class="ui vertical sidebar menu">
    <div class="item">
        <div class="image">
            <img src="../images/stop_ragging.png">
        </div>
    </div>
    <a class="item" href="/dashboard">Complaints</a>
    <%if(profile_type==1){%>
    <a class="item" href="/dashboard/undertakings">Undertakings</a>
    <a class="item" href="/dashboard/volunteers">Volunteers</a>
    <%}%>
    <a class="active item" href="/dashboard/profile">Profile</a>
    <a class="item" href="/dashboard/logout">Logout</a>
</div>
<div class="pusher">
    <div class="ui vertical masthead segment basic">
        <div class="ui container">
            <div class="ui large secondary ptg menu">
                <a class="toc item">
                    <i class="sidebar icon"></i>
                </a>
                <a class="item" href="..">
                    <div class="image">
                        <img src="../images/stop_ragging (1).png">
                    </div>
                </a>
                <a class="item" href="/dashboard">Complaints</a>
                <%if(profile_type==1){%>
                <a class="item" href="/dashboard/undertakings">Undertakings</a>
                <a class="item" href="/dashboard/volunteers">Volunteers</a>
                <%}%>
                <a class="active item" href="/dashboard/profile">Profile</a>
                <a class="item" href="/dashboard/logout">Logout</a>

                <a class="right floated item">
                    <div class="image">
                        <img src="../images/logo (1).png">
                    </div>
                </a>
            </div>
            <div class="ui middle aligned segment">
                        <form class="ui form" method="post" id="forma" encType="multipart/form-data">
                            <input type="hidden" name="id" id="id">
                            <div class="ui stackable grid">
                                <div class="row">
                        <div class="four wide column">


                            <div style="text-align: center;">
                                <img class="ui centered circular image" src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" id="image_preview" >
                                <h4>Upload a different photo...</h4>
                                <input type="file" accept="image/*" name="file" class="text-center center-block file-upload" onchange="readURL(this);">
                            </div>

                        </div>
                        <div class="twelve wide column">
                            <br/>
                                <div class="two fields">
                                    <div class="field">
                                        <label>Name</label>
                                        <input type="text" id="name" name="name">
                                    </div>
                                    <div class="field">
                                        <label>Mobile No.</label>
                                        <input type="number" id="mobile" name="mobile">
                                    </div>
                                </div>
                                <div class="two fields">
                                    <div class="field">
                                        <label>Email</label>
                                        <input readonly type="email" id="email" name="email">
                                    </div>
                                    <div class="field">
                                        <label>Designation</label>
                                        <input type="text" id="designation" name="designation">
                                    </div>
                                </div>
                            <div class="two fields">
                                <div class="field">
                                    <label>Type</label>
                                    <input readonly type="text" id="type" name="type">
                                </div>
                                <div class="field">
                                    <label>&nbsp;</label>
                                    <div class="ui fluid black large button" onclick="change_password()">Change Password</div>
                                </div>
                            </div>

                            <div class="four fields">
                                <div class="field"></div>
                                <div class="field">
                                    <input type="submit" value="Submit" class="ui fluid red large submit button">
                                </div>
                                <div class="field">
                                    <div class="ui fluid black large reset button" onclick="form_clear()">Reset</div>
                                </div>
                                <div class="field"></div>
                            </div>


                        </div>
                                </div>
                            </div>
                        </form>
            </div>

        </div>

    </div>
</div>
</body>
</html>